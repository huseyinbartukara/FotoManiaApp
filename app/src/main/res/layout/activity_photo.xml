<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F5D5E"
    tools:context=".PhotoActivity">


    <ImageView
        android:id="@+id/resimSecImageView"
        android:layout_width="300dp"
        android:layout_height="172dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/add_foto3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColorHint="#CCE1F4"
        app:boxStrokeColor="#CCE1F4"
        app:helperTextTextColor="#CCE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resimSecImageView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFotoAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F5D5E"
            android:cursorVisible="false"
            android:hint="Fotoğraf Adı"
            android:textColor="#CCE1F4"
            android:textColorHint="#CCE1F4" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="#CCE1F4"
        app:boxStrokeColor="#CCE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFotoMakine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F5D5E"
            android:hint="Çekilen Makine"
            android:textColor="#CCE1F4"
            android:textColorHint="#CCE1F4" />
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="#CCE1F4"
        app:boxStrokeColor="#CCE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFotoMekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F5D5E"
            android:hint="Çekilen Mekan"
            android:textColor="#CCE1F4"
            android:textColorHint="#CCE1F4" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColorHint="#CCE1F4"
        app:boxStrokeColor="#CCE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFotoZaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F5D5E"
            android:hint="Çekilen Zaman"
            android:textColor="#CCE1F4"
            android:textColorHint="#CCE1F4" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#CCE1F4"
        android:text="kAYDET"
        android:textColor="#1F5D5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" />


</androidx.constraintlayout.widget.ConstraintLayout>